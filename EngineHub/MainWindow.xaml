<Window x:Class="EngineHub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EngineHub"
        mc:Ignorable="d"
        Title="TomTek Engine Hub" Height="450" Width="800">
    <Grid>
        <TextBlock
            Name = "MyBlock"
            
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            TextWrapping="Wrap"
            Text="Hello World!"
            FontSize="75"
            
        ></TextBlock>
        <Button 
            Name="MyButton" 
            Width="100" 
            Height="50" 
            Content="Button" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Bottom" 
            Margin="0,0,0,20"
            Click="HelloWorldClicked"
        ></Button>
    </Grid>
</Window>
